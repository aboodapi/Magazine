@model IEnumerable<store.Models.Product>

@{
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<form method="post"  asp-action="Index">
    <h3>
        <div class="form-box f-left " style="font-size:small">
            <input type="text" name="find" class="form-box f-right " placeholder="Search..." />
            <input type="submit" value="Search" />
        </div>
    </h3>
</form>
<a href="~/Products/Index">Return All Products</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Magazine Title 
            </th>
            <th>
                Publication Date
            </th>
            <th>
                Price
            </th>
            <th>
                Product Image
            </th>
            <th>
                Category
            </th>
            <th>
                Status 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublicationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src=@Url.Content("~/Images/" + item.Imagepath) asp-append-version="true" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusId1Navigation.Status1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
