    @model store.Models.User

    @{
        Layout = "_CustomerdashboardLayout";
    }

    <h1>Your Profile </h1>

    <div class="container rounded bg-white mt-5">
        <div class="row">
            <div class="col-md-4 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    Profile Photot
                    <img src=@Url.Content("~/Images/" + Model.Imagepath) asp-append-version="true" style="border-radius:50%;" width="100" height="100" />
                    <span class="font-weight-bold"></span><span class="text-black-50">@Html.DisplayFor(model => model.Fname) @Html.DisplayFor(model => model.Lname)</span><span>Jordan</span>
                </div>
            </div>
            <div class="col-md-8">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">

                        <h6 class="text-right">Profile</h6>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">First Name: @Html.DisplayFor(model => model.Fname)</div>
                        <div class="col-md-6">Last Name: @Html.DisplayFor(model => model.Lname)</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">Email: @Html.DisplayFor(model => model.Email)</div>
                        <div class="col-md-6">Password: @Html.DisplayFor(model => model.Password)</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        body {
            background: #BA68C8;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #BA68C8;
        }

        .profile-button {
            background: #BA68C8;
            box-shadow: none;
            border: none;
        }

            .profile-button:hover {
                background: #682773;
            }

            .profile-button:focus {
                background: #682773;
                box-shadow: none;
            }

            .profile-button:active {
                background: #682773;
                box-shadow: none;
            }

        .back:hover {
            color: #682773;
            cursor: pointer;
        }
    </style>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
