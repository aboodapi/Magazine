@model store.Models.Testimonial

@{
    ViewData["Title"] = "Testimonials";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}



<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Get in Touch</h2>
                <p>Add your Testimonials and experience within the site</p>                
            </div>
            <div class="col-lg-8">
                <form asp-controller="Testimonials" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="Message" class="control-label"></label>
                                <input asp-for="Message" class="form-control" cols="30" />
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                        </div>                        
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="button button-contactForm boxed-btn">Send</button>
                    </div>
                </form>
            </div>
            <div class="col-lg-3 offset-lg-1">
                <p></p>
            </div>
        </div>
    </div>
</section>
